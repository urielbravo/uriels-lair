---
import Layout from '../layouts/Layout.astro';

import torch from '../images/torch.gif'
---

<Layout title="Uriel's Lair.">
  <div
    class="flex items-center"
  >
  <img src={torch} alt='torch'/>
  <div class="marquee">
    <span class="text-4xl text-gruvboxTextColor">The blog</span>
  </div>
  <img src={torch} alt='torch' />
  </div>
</Layout>

<style>
  .marquee {
  width: 90%;
  white-space: nowrap;
  overflow: hidden;
}

.marquee span {
  animation: animate 3s linear infinite;
  display: inline-block;
  padding-left: 100%;
}

@keyframes animate {
  100% {
    transform: translate(-100%, 0);
  }
}
</style>
