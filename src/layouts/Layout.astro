---
import NavBar from '../components/NavBar.astro';
import SideBar from '../components/SideBar.astro';

export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/terminal.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<div class="relative min-h-screen bg-gruvboxLightBg">
      <NavBar />
      <SideBar />
      <!-- container -->
      <main class="absolute md:top-0 p-10 top-16 bottom-0 md:left-72 lg:left-96 right-0 overflow-y-auto">
        <!-- content -->
          <slot />
      </main>
    </div>
    <script>
      import "../scripts/menu"
    </script>
	</body>
</html>

